<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/big_tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/arrow"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="20dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/shared_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/big_tv"
        android:layout_marginEnd="125dp"
        android:text="Distance Shared"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:drawableRight="@drawable/arrow" />

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shared_tv"
        android:layout_marginStart="149dp"
        android:padding="10dp"
        android:text="NUM"
        android:textColor="@color/black" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="39dp"
        app:srcCompat="@drawable/googleg_disabled_color_18" />

</RelativeLayout>